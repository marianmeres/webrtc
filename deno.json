{
  "name": "@marianmeres/webrtc",
  "version": "1.1.0",
  "exports": "./src/mod.ts",
  "tasks": {
    "dev": "deno run --watch main.ts",
    "test": "deno test",
    "test:watch": "deno test --watch",
    "test:browser": "deno run -A scripts/build-browser-tests.ts && deno run -A scripts/serve-browser-tests.ts",
    "build:example": "deno run -A scripts/build-example.ts",
    "serve:example": "deno run -A scripts/signaling-server.ts",
    "npm:build": "deno run -A scripts/build-npm.ts",
    "npm:publish": "deno run -A scripts/build-npm.ts && cd ./.npm-dist && npm publish --access=public",
    "release": "deno run -A jsr:@marianmeres/deno-release",
    "publish": "deno publish && deno task npm:publish"
  },
  "imports": {
    "@marianmeres/fsm": "jsr:@marianmeres/fsm@^2.11.0",
    "@marianmeres/npmbuild": "jsr:@marianmeres/npmbuild@^1.7.1",
    "@marianmeres/pubsub": "jsr:@marianmeres/pubsub@^2.4.4",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/fs": "jsr:@std/fs@^1.0.20",
    "@std/path": "jsr:@std/path@^1.1.3"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 90,
    "indentWidth": 4
  },
  "compilerOptions": {
    "lib": [
      "deno.window",
      "dom",
      "dom.iterable"
    ]
  }
}
