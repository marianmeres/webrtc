{
	"tasks": {
		"dev": "deno run --watch main.ts",
		"test": "deno test --watch",
		"build:example": "deno run -A build_example.ts"
	},
	"imports": {
		"@marianmeres/fsm": "jsr:@marianmeres/fsm@^2.2.0",
		"@marianmeres/pubsub": "jsr:@marianmeres/pubsub@^2.2.0",
		"@std/assert": "jsr:@std/assert@1"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 90,
		"indentWidth": 4
	},
	"lint": {
		"rules": {
			"exclude": ["no-explicit-any"]
		}
	},
	"compilerOptions": {
		"lib": ["deno.window", "dom", "dom.iterable"]
	}
}
